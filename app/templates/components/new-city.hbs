{{#if addNewCity}}
  <h1>NewCity</h1>
  <div >
    <form>
      <div class="form-group">
        <label for="addCity">City</label>
        {{input value=addCity id="addCity"}}
      </div>
      <div class="form-group">
        <label for="country">Country</label>
        {{input value=country id="country"}}
      </div>

      <button {{action 'saveCity1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
